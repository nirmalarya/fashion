<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="columns.top">
            <block class="ScandicDesi\Shipping\Block\Cart\Notification\Offer" name="cart_notification_offer" after="page.messages"
                   template="ScandicDesi_Shipping::cart/notification/offer.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="cartOffers" xsi:type="array">
                                <item name="component" xsi:type="string">ScandicDesi_Shipping/js/view/cart-offers</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>