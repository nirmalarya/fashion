<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="ScandicDesi\NewsletterPopup\Block\Subscribe" name="scandicdesi.newsletter.popup"
                   template="ScandicDesi_NewsletterPopup::subscribe_popup.phtml" >
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="newsletter" xsi:type="array">
                                <item name="component" xsi:type="string">ScandicDesi_NewsletterPopup/js/view/newsletter</item>
                            </item>
                        </item>
                    </argument>
                    <!--<argument name="is_visible" xsi:type="boolean">false</argument>-->
                    <argument name="popup_delay" xsi:type="number">5</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
