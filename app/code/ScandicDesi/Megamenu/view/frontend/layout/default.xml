<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.top">
            <referenceBlock class="Echidna\Megamenu\Block\Topmenu" name="catalog.topnav" template="Magento_Theme::html/topmenu.phtml">
                <arguments>
                    <argument name="category_list_template" xsi:type="string">Echidna_Megamenu::category_list.phtml</argument>
                    <argument name="static_content_template" xsi:type="string">Echidna_Megamenu::static_content.phtml</argument>
                    <argument name="layout_template" xsi:type="string">Echidna_Megamenu::column_template.phtml</argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
